<!DOCTYPE jdo PUBLIC
    "-//Sun Microsystems, Inc.//DTD Java Data Objects Metadata 2.0//EN"
    "http://java.sun.com/dtd/jdo_2_0.dtd">
<jdo>
    <package name="mil.dod.th.core.persistence">
        <class
              name="PersistentData"
              detachable="true"
              table="PersistentDataStore">
            <field
                  name="timestamp"
                  persistence-modifier="persistent">
                  <index name="TIMESTAMP_INDEX" />
            </field>
            <field
                  name="uuid"
                  persistence-modifier="persistent"
                  default-fetch-group="true">
                  <unique name="UUID_CONSTRAINT" />
                  <index name="UUID_INDEX" />
            </field>
            <field
                  name="entity"
                  persistence-modifier="persistent"
                  serialized="true"
                  field-type="[B"
                  default-fetch-group="true"/>
            <field
                  name="description"
                  persistence-modifier="persistent">
                  <index name="DESCRIPTION_INDEX" />
            </field>
            <field
                  name="context"
                  persistence-modifier="persistent">
                  <index name="CONTEXT_INDEX" />
            </field>
        </class>
    </package>
</jdo>